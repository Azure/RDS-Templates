                                "name": "Certificate CRL MicrosoftDotCom",
                                "ipProtocols": [
                                    "TCP"
                                ],
                                "sourceAddresses": [
                                    "[parameters('avd-hostpool-subnet')]"
                                ],
                                "sourceIpGroups": [],
