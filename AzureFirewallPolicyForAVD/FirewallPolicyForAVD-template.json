                                "destinationIpGroups": [],
                                "destinationFqdns": [],
                                "destinationPorts": [
                                    "443"
                                ]
                            },
                            {
                                "ruleType": "NetworkRule",
                                "name": "Windows activation",
                                "ipProtocols": [
                                    "TCP"
                                ],
                                "sourceAddresses": [
                                    "[parameters('avd-hostpool-subnet')]"
                                ],
                                "sourceIpGroups": [],
                                "destinationAddresses": [],
                                "destinationIpGroups": [],
                                "destinationFqdns": [
                                    "kms.core.windows.net"
                                ],
                                "destinationPorts": [
                                    "1688"
                                ]
                            },
                            {
                                "ruleType": "NetworkRule",
                                "name": "Azure Windows activation",
                                "ipProtocols": [
                                    "TCP"
                                ],
                                "sourceAddresses": [
                                    "[parameters('avd-hostpool-subnet')]"
                                ],
                                "sourceIpGroups": [],
                                "destinationAddresses": [],
