    <div class="activitytable" id="table">
        <table class="ms-Table" id="activityTabledata">
            <thead>
                <tr>
                    <th></th>
                    <th asp-for="Start Time">Start Time</th>
                    <th asp-for="End Time">End Time</th>
                    <th asp-for="Outcome">Outcome</th>

