                            </td>
                            <td>@d.errorMessage</td>
                            <td>@d.Tenants</td>
                            <td>@d.userName</td>
                            <td>@d.startTime</td>
                            <td>@d.endTime</td>
                            <td>@d.ObjectsCreated</td>
                            <td>@d.ObjectsDeleted</td>
                            <td>@d.ObjectsFetched</td>

