                    <th asp-for="Error">Error Code</th>
                    <th asp-for="Session Host">Session Host</th>
                    <th asp-for="Client">Client</th>
                    <th asp-for="Client Ip">Client Ip</th>
                    <th asp-for="HostPoolname">HostPoolname</th>
                    <th asp-for="Tenant">Tenant</th>
