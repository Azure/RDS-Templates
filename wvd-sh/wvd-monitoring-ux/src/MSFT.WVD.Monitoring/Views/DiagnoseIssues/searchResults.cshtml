                            <td>@d.errorMessage </td>
                            <td><a href="" class="not-active">@d.ClientIPAddress </a></td>
                            <td>@d.ClientOS </td>
                        </tr>
                    }
                }
                else if (Model.ActivityType == MSFT.WVD.Monitoring.Common.Models.ActivityType.None)
