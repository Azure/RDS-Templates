@model MSFT.WVD.Monitoring.Models.HomePageViewModel
@{
    ViewData["Title"] = "Home Page";
}

@if (Model.ShowDialog)
{
    <div class="ms-PanelExample">
        <div class="flyoutpanel ms-Panel is-open">
            <form asp-controller="Home" asp-action="Save" method="post">
                <div class="flyoutpanel-content-wrap">
                    <div class="flyoutpanel-header">
                        <h4>Please choose Tenant Group &amp; Tenant</h4>
                    </div>
                    <div class="flyoutpanel-content">
                        <div class="flyoutpanel-controls">
                            <label asp-for="SubmitData.TenantGroupName" class="control-label">TenantGroupName<span class="red">*</span></label>
                            <input asp-for="SubmitData.TenantGroupName" class="form-control m-b-10" id="tenantgrp" />
                            <span asp-validation-for="SubmitData.TenantGroupName" id="validate"></span>
                            <br />

                            <label asp-for="SubmitData.TenantName" class="control-label">TenantName<span class="red">*</span></label>
                            <input asp-for="SubmitData.TenantName" class="form-control m-b-10" id="tenant" />
                            <span asp-validation-for="SubmitData.TenantName" id="validatetenant"></span>
                        </div>
                    </div>
                    <div class="flyoutpanel-footer">
                        <button type="reset" class="ms-Button">
                            <span class="ms-Button-label">Cancel</span>
                        </button>
                        <button type="submit" class="ms-Button" id="save" disabled>
                            <span class="ms-Button-label">Save</span>
                        </button>

                    </div>
                </div>
            </form>
        </div>
    </div>
}

<script type="text/javascript">
    document.getElementById("tenantgrp")
        .addEventListener("focus", function () {
            document.getElementById("validate").hidden = true;
            document.getElementById("save").removeAttribute("disabled");
        }, false);
</script>
<script type="text/javascript">
    document.getElementById("tenant")
        .addEventListener("focus", function () {
            document.getElementById("validatetenant").hidden = true;
            document.getElementById("save").removeAttribute("disabled");
        }, false);
</script>
