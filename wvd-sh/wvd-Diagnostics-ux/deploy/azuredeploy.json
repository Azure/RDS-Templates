{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
      "parameters": {

      "WebAppName": 
      {
          "type": "string",
          "metadata": {
              "description": "Name of the webapp you wish to create, provide an unique name"
          }
      },
      "Client-Id":
      {
          "type": "string",
          "metadata": {
              "description": "AzureAD Application Id"
          }
      },
      "Client-Secret":
      {
          "type": "securestring",
          "metadata": {
              "description": "AzureAD Application Secret Key"
          }
      },
      "LogAnalyticsWorkspaceId":
      {
          "type": "string",
          "metadata": {
              "description": "Log Analytics Workspace Id"
          }
      }
      },
  "variables": {
      "AppServicePlanName":"[concat(parameters('WebAppName'),'-Splan')]",
      "workerSize": "0",
      "serviceplansku": "S1",
      "packageURL":"https://raw.githubusercontent.com/Azure/RDS-Templates/wvd-monitoring/wvd-sh/wvd-monitoring-ux/deploy/wvd-monitoring-ux.zip"
  },
  "resources": [
      {
        "apiVersion": "2015-08-01",
        "name": "[variables('AppServicePlanName')]",
        "type": "Microsoft.Web/serverfarms",
        "location": "[resourceGroup().location]",
        "tags": {
          "displayName": "AppServicePlan"
        },
        "sku": {
          "name": "[variables('serviceplansku')]",
          "capacity": "[variables('workerSize')]"
        },
        "properties": {
          "name": "[variables('AppServicePlanName')]"
        }
      },
    {
      "apiVersion": "2015-08-01",
      "name": "[parameters('WebAppName')]",
      "type": "Microsoft.Web/sites",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', variables('AppServicePlanName'))]"
      ],
      "properties": {
        "serverFarmId": "[variables('AppServicePlanName')]",
        "siteConfig": {
          "appSettings": [
              {
                  "name": "AzureAd:ClientId",
                  "value": "[parameters('Client-Id')]"
              },
              {
                  "name": "AzureAd:ClientSecret",
                  "value": "[parameters('Client-Secret')]"
              },
              {
                  "name": "AzureAd:LogAnalyticsWorkspaceId",
                  "value": "[parameters('LogAnalyticsWorkspaceId')]"
              }
          ]
      }
      },
      "resources": [
        {
          "name": "MSDeploy",
          "type": "extensions",
          "location": "[resourceGroup().location]",
          "apiVersion": "2015-08-01",
          "dependsOn": [
            "[concat('Microsoft.Web/sites/', parameters('WebAppName'))]"
          ],
          "properties": {
            "packageUri": "[variables('packageURL')]"
          }
        }
      ]
    }
  ]
}