{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "rdshTemplateImageUri": {
            "type": "string",
            "metadata": {
                "description": "URI for the template VHD to use for RDSH instances. For example, https://rdsstorage.blob.core.windows.net/vhds/MyWindowServerOSImage.vhd"
            }
        },

        "rdshNumberOfInstances": {
            "type": "int",
            "metadata": {
                "description": "Number of RD Session Hosts"
            }
        },
        "rdshVmSize": {
            "type": "string",
            "allowedValues": [
              "Standard_A0",
              "Standard_A1",
              "Standard_A2",
              "Standard_A3",
              "Standard_A4",
              "Standard_A5",
              "Standard_A6",
              "Standard_A7",
              "Standard_D1",
              "Standard_D2",
              "Standard_D3",
              "Standard_D4",
              "Standard_D5"
            ],
            "metadata": {
              "description": "The size of the RDSH VMs"
            },
            "defaultValue": "Standard_A2"
        },
        "existingDomainName": {
            "type": "string",
            "metadata": {
                "description": "Domain name of the exisiting AD"
            }
        },
        "existingDomainAdminUsername": {
            "type": "string",
            "metadata": {
                "description": "The name of administrator in the existing AD"
            }
        },
        "existingDomainAdminPassword": {
            "type": "securestring",
            "metadata": {
                "description": "Domain administrator password"
            }
        },
        "existingVnetName": {
            "type": "string",
            "metadata": {
                "description": "VNET name"
            }
        },
        "existingSubnetName": {
            "type": "string",
            "metadata": {
                "description": "Subnet name"
            }
        },
        "RDBrokerDeploymentURL":{
            "type": "string",
            "metadata": {
                "description": "The URL of RD Broker"
            }
        },
        "HostPoolName":{
            "type": "string",
            "metadata": {
                "description": "New or Existing HostPool Name"
            }
        },
        "InitializeDBSecret":{
            "type": "string",
            "metadata": {
                "description": "New or Existing HostPool Name"
            }
        },
        
        "DelegatedAdminUsername":{
            "type": "string",
            "defaultvalue":"",
            "metadata": {
                "description": "Delegated admin username"
            }
        },
        "DelegatedAdminPassword":{
            "type": "securestring",
            "defaultvalue":"",
            "metadata": {
                "description": "Delegated admin Password"
            }
        }

    },

    "variables": {
        "storageAccountName": "[split( split( parameters('rdshTemplateImageUri'), '/')[2], '.' )[0]]",
        "impersonateScript": "https://gallery.technet.microsoft.com/scriptcenter/Impersonate-a-User-9bfeff82/file/127189/1/New-ImpersonateUser.ps1",
        "vmname": "advm",
        "HostPoolFriendlyName": "Hostpool",
        "HostPoolDescription": "template through create hostpool",
        "RegistrationExpairationHours": "8760",
        "SessionHostMaximumSessionLimit": "998",
        "_artifactsLocation": "https://raw.githubusercontent.com/Azure/RDS-Templates/master/rdmi-peopletech/ARM-Existing%20AD%20and%20Hostpool/",
        "fileURI": "[concat(variables('_artifactsLocation'),'/scripts/deployagent.zip')]",
        "scriptFolder": "Scripts",
        "scriptFileName":  "Script1.ps1",
        "p": {
            "RDBrokerURL": "[concat(' -RDBrokerURL ', parameters('RDBrokerDeploymentURL'))]",
            "HostPoolName": "[concat(' -HostPoolName ', parameters('HostPoolName'))]",
            "FriendlyName": "[concat(' -FriendlyName ', variables('HostPoolFriendlyName'))]",
            "Description": "[concat(' -Description ', variables('HostPoolDescription'))]",
            "MaxSessionLimit": "[concat(' -MaxSessionLimit ', variables('SessionHostMaximumSessionLimit'))]",
            "Hours": "[concat(' -Hours ', variables('RegistrationExpairationHours'))]",
            "DelegateAdminUsername": "[concat(' -DelegateAdminUsername ', parameters('DelegatedAdminUsername'))]",
            "DelegateAdminpassword": "[concat(' -DelegateAdminpassword ', parameters('DelegatedAdminpassword'))]",
            "DomainAdminUsername": "[concat(' -DomainAdminUsername ', parameters('existingDomainAdminUsername'))]",
            "DomainAdminpassword": "[concat(' -DomainAdminpassword ', parameters('existingDomainAdminpassword'))]",
            "InitializeDBSecret": "[concat(' -InitializeDBSecret ', parameters('InitializeDBSecret'))]",
            "fileURI": "[concat(' -fileURI ', variables('fileURI'))]"
            
        },
        "scriptParameters": "[concat(variables('p').RDBrokerURL, variables('p').HostPoolName, variables('p').FriendlyName, variables('p').Description, variables('p').MaxSessionLimit, variables('p').Hours, variables('p').DelegateAdminUsername, variables('p').DelegateAdminpassword, variables('p').DomainAdminUsername, variables('p').DomainAdminpassword, variables('p').InitializeDBSecret)]"
    },

    "resources": [
        {
            "apiVersion": "2015-06-15",
            "type": "Microsoft.Network/networkInterfaces",
            "name": "[concat('rdsh-', copyindex(), '-nic')]",
            "location": "[resourceGroup().location]",
            "copy": {
                "name": "rdsh-nic-loop",
                "count": "[parameters('rdshNumberOfInstances')]"
            },
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('existingVnetName'), parameters('existingSubnetName'))]"
                            }
                        }
                    }
                ]
            }
        },
        {
            "apiVersion": "2015-06-15",
            "type": "Microsoft.Compute/availabilitySets",
            "name": "[concat('rdsh-', copyindex(),'availabilitySet')]",
            "location": "[resourceGroup().location]",
            "copy": {
                "name": "rdsh-vm-loop",
                "count": "[parameters('rdshNumberOfInstances')]"
            }
        },
        {
            "apiVersion": "2015-06-15",
            "type": "Microsoft.Compute/virtualMachines",
            "name": "[concat('rdsh-', copyindex())]",
            "location": "[resourceGroup().location]",
            "copy": {
                "name": "rdsh-vm-loop",
                "count": "[parameters('rdshNumberOfInstances')]"
            },
            "dependsOn": [
                "[concat('Microsoft.Network/networkInterfaces/', 'rdsh-', copyindex(), '-nic')]"
            ],
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[parameters('rdshVmSize')]"
                },
                
                "osProfile": {
                    "computerName": "[concat('rdsh-', copyindex())]",
                    "adminUsername": "[parameters('existingDomainAdminUsername')]",
                    "adminPassword": "[parameters('existingDomainAdminPassword')]"
                },
                "storageProfile": {
                    "osDisk": {
                        "name": "[concat('rdsh-', copyindex(),'-osDisk')]",
                        "osType": "Windows",
                        "caching": "ReadWrite",
                        "createOption": "FromImage",
                        "image": {
                            "uri": "[parameters('rdshTemplateImageUri')]"
                        },
                        "vhd": {
                            "uri": "[concat(reference(concat('Microsoft.Storage/storageAccounts/', variables('storageAccountName')), '2016-01-01').primaryEndpoints.blob, 'vhds/rdsh-', copyindex(), '-osdisk.vhd')]"
                        }

                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces',concat('rdsh-', copyindex(), '-nic'))]"
                        }
                    ]
                },
                "diagnosticsProfile": {
                    "bootDiagnostics": {
                        "enabled": "true",
                        "storageUri": "[reference(concat('Microsoft.Storage/storageAccounts/', variables('storageAccountName')), '2016-01-01').primaryEndpoints.blob]"
                    }
                }
            },
             "resources": [
                {
                    "apiVersion": "2015-06-15",
                    "type": "extensions",
                    "name": "[concat('rdsh-',copyindex())]",
                    "location": "[resourceGroup().location]",
                    "dependsOn": [
                        "[resourceId('Microsoft.Compute/virtualMachines', concat('rdsh-', copyindex()))]"
                    ],
                    "properties": {
                        "publisher": "Microsoft.Powershell",
                        "type": "DSC",
                        "typeHandlerVersion": "2.11",
                        "autoUpgradeMinorVersion": true,
                        "settings": {
                            "ModulesUrl": "[concat(variables('_artifactsLocation'),'/DSC/Configuration.zip')]",
                            "ConfigurationFunction": "Configuration.ps1\\SessionHost",
                            "Properties": {
                                "DomainName": "[parameters('existingDomainName')]",
                                "AdminCreds": {
                                    "UserName": "[parameters('existingDomainAdminUsername')]",
                                    "Password": "PrivateSettingsRef:AdminPassword"
                                }
                            }
                        },
                        "protectedSettings": {
                            "Items": {
                                "AdminPassword": "[parameters('existingDomainAdminPassword')]"
                            }
                        }
                    }
                }

            ]
        },
            {
              "type": "Microsoft.Compute/virtualMachines/extensions",
              "name": "[concat(variables('vmName'),'/CustomScriptExtension')]",
              "apiVersion": "2015-06-15",
              "location": "[resourceGroup().location]",
              "properties": {
                "publisher": "Microsoft.Compute",
                "type": "CustomScriptExtension",
                "typeHandlerVersion": "1.8",
                "autoUpgradeMinorVersion": true,
                "settings": {
                   "fileUris": ["https://raw.githubusercontent.com/PeopleTechRDS/msft-rdmi-templates/master/ARM-Existing%20AD%20and%20Hostpool/Scripts/Script1.ps1"],
                   "commandToExecute": "[concat('powershell.exe -ExecutionPolicy Unrestricted -File Script1.ps1', variables('scriptParameters'))]"
                }
              }
            }
          ]
}