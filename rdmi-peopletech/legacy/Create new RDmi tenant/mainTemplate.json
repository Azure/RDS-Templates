{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "RDBrokerURL": {
            "type": "String",
            "metadata": {
                "description": "provide RdbrokerURI"
            }
        },
        "HosterAdminName": {
            "type": "String",
            "metadata": {
                "description": "HosterAdminName for the Azure Partner Account."
            }
        },
        "HosterAdminPassword": {
            "type": "SecureString",
            "metadata": {
                "description": "HosterAdminPassword for the Azure Partner Account."
            }
        },
        "AadTenantId": {
            "type": "String",
            "metadata": {
                "description": "AadTenantId for the Azure Tenant Account."
            }
        },
        "TenantName": {
            "type": "String",
            "metadata": {
                "description": "Provide Tenant Name"
            }
        },
        "TenantFriendlyName": {
            "defaultValue": "",
            "type": "string",
            "metadata": {
                "description": "Provide Tenant FriendlyName"
            }
        },
        "TenantDescription": {
            "defaultValue": "",
            "type": "string",
            "metadata": {
                "description": "Provide Tenant Description"
            }
        },
        "HostpoolName": {
            "type": "String",
            "metadata": {
                "description": "Provide Hostpool Name"
            }
        },
        "HostpoolFriendlyName": {
            "defaultValue": "",
            "type": "string",
            "metadata": {
                "description": "Provide Hostpool FriendlyName"
            }
        },
        "HostpoolDescription": {
            "defaultValue": "",
            "type": "string",
            "metadata": {
                "description": "Provide Hostpool Description"
            }
        },
        "virtualMachineSize": {
            "defaultValue": "Standard_DS1_v2",
            "allowedValues": [
                "Standard_D1",
                "Standard_D1_v2",
                "Standard_DS1",
                "Standard_DS1_v2"
            ],
            "type": "string",
            "metadata": {
                "description": "The size of the VM."
            }
        },
        "galleryImageSelection": {
            "defaultValue": "2016-Datacenter",
            "type": "string",
            "metadata": {
                "description": "The size of the VM."
            }
        }
    },
    "variables": {
        "nicName": "myVMNic",
        "addressPrefix": "10.0.0.0/16",
        "vmsubscriptionId": "[subscription().subscriptionId]",
        "subnetName": "Subnet",
        "subnetPrefix": "10.0.0.0/24",
        "subnetRef": "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('virtualNetworkName'), variables('subnetName'))]",
        "vmName": "MyVM",
        "TFriendlyName": "[if(equals(parameters('TenantFriendlyName'),'empty'), json('null'), parameters('TenantFriendlyName'))]",
        "TDescription": "[if(equals(parameters('TenantDescription'),'empty'), json('null'), parameters('TenantDescription'))]",
        "HFriendlyName": "[if(equals(parameters('HostpoolFriendlyName'),'empty'), json('null'), parameters('HostpoolFriendlyName'))]",
        "HDescription": "[if(equals(parameters('HostpoolDescription'),'empty'), json('null'), parameters('HostpoolDescription'))]",
        "virtualNetworkName": "MyVNET",
        "publicIPAddressName": "myPublicIP",
        "dnsNameForPublicIP": "[uniqueString(resourceGroup().name)]",
        "_artifactsLocation": "https://raw.githubusercontent.com/Azure/RDS-Templates/master/rdmi-peopletech/Create%20new%20RDmi%20tenant/Scripts/",
        "adminUsername": "vmadmin",
        "adminPassword": "Welcome@12345",
        "resourcegroupname": "[resourceGroup().name]",
        "FileURI": "[concat(variables('_artifactsLocation'),'/PSModules.zip')]"
    },
    "resources": [
        {
            "type": "Microsoft.Network/publicIPAddresses",
            "name": "[variables('publicIPAddressName')]",
            "apiVersion": "2016-09-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "publicIPAllocationMethod": "Dynamic",
                "dnsSettings": {
                    "domainNameLabel": "[variables('dnsNameForPublicIP')]"
                }
            }
        },
        {
            "type": "Microsoft.Network/virtualNetworks",
            "name": "[variables('virtualNetworkName')]",
            "apiVersion": "2016-09-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[variables('addressPrefix')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "[variables('subnetName')]",
                        "properties": {
                            "addressPrefix": "[variables('subnetPrefix')]"
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Network/networkInterfaces",
            "name": "[variables('nicName')]",
            "apiVersion": "2016-09-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "publicIPAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses',variables('publicIPAddressName'))]"
                            },
                            "subnet": {
                                "id": "[variables('subnetRef')]"
                            }
                        }
                    }
                ]
            },
            "dependsOn": [
                "[variables('publicIPAddressName')]",
                "[variables('virtualNetworkName')]"
            ]
        },
        {
            "type": "Microsoft.Compute/virtualMachines",
            "name": "[variables('vmName')]",
            "apiVersion": "2016-04-30-preview",
            "location": "[resourceGroup().location]",
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[parameters('virtualMachineSize')]"
                },
                "osProfile": {
                    "computerName": "[variables('vmName')]",
                    "adminUsername": "[variables('adminUsername')]",
                    "adminPassword": "[variables('adminPassword')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "MicrosoftWindowsServer",
                        "offer": "WindowsServer",
                        "sku": "[parameters('galleryImageSelection')]",
                        "version": "latest"
                    },
                    "osDisk": {
                        "createOption": "FromImage"
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces',variables('nicName'))]"
                        }
                    ]
                }
            },
            "resources": [
                {
                    "type": "extensions",
                    "name": "CustomScriptExtension",
                    "apiVersion": "2016-04-30-preview",
                    "location": "[resourceGroup().location]",
                    "properties": {
                        "publisher": "Microsoft.Compute",
                        "type": "CustomScriptExtension",
                        "typeHandlerVersion": "1.8",
                        "autoUpgradeMinorVersion": true,
                        "settings": {
                            "fileUris": [
                                "https://raw.githubusercontent.com/Azure/RDS-Templates/master/rdmi-peopletech/Create%20new%20RDmi%20tenant/Scripts/Script.ps1"
                            ],
                            "commandToExecute": "[concat('powershell.exe -ExecutionPolicy Unrestricted -File Script.ps1', ' -RDBrokerURI \"', parameters('RDBrokerURL'), '\"',' ',  ' -SubscriptionId \"', variables('vmsubscriptionId'), '\"',' ', ' -AadTenantId \"', parameters('AadTenantId'), '\"',' ', ' -TenantName \"', parameters('TenantName'), '\"',' ', ' -FriendlyName \"', variables('TFriendlyName'), '\"',' ', ' -Description \"', variables('TDescription'), '\"',' ',' -HostPoolName \"', parameters('HostPoolName'), '\"',' ', ' -HostPoolFriendlyName \"', variables('HFriendlyName'), '\"',' ', ' -HostPoolDescription \"', variables('HDescription'), '\"',' ', ' -Username \"', parameters('HosterAdminName'), '\"',' ', ' -password \"', parameters('HosterAdminPassword'), '\"',' ',' -vmUserName \"', variables('adminUsername'), '\"',' ', ' -vmPassword \"', variables('adminPassword'), '\"',' ', '-ResourceGroupName \"', variables('resourcegroupname'), '\"',' ', ' -fileURI \"', variables('FileUri'), '\"')]"
                        }
                    },
                    "dependsOn": [
                        "[variables('vmName')]"
                    ]
                }
            ],
            "dependsOn": [
                "[variables('nicName')]"
            ]
        }
    ]
}